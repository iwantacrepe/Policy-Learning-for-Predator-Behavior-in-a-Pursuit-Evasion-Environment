            <geom name="blue_arm_left" type="capsule" fromto="-0.24 0 0.72 -0.34 0 0.4" size="0.06" material="blue_cloth_mat" friction="0.9 0.05 0.05" density="420"/>
            <geom name="blue_arm_right" type="capsule" fromto="0.24 0 0.72 0.34 0 0.4" size="0.06" material="blue_cloth_mat" friction="0.9 0.05 0.05" density="420"/>
            <geom name="blue_belt" type="cylinder" pos="0 0 0.48" size="0.17 0.04" material="blue_mat" friction="0.9 0.05 0.05" density="480"/>
            <geom name="blue_head" type="sphere" pos="0 0 0.92" size="0.12" material="skin_mat" friction="0.9 0.05 0.05" density="300"/>
            <geom name="blue_visor" type="cylinder" pos="0 0.09 0.92" size="0.08 0.015" material="blue_mat" contype="0" conaffinity="0" density="150"/>
        </body>

        <body name="orange" pos="2.5 0 0.35">
            <freejoint name="orange_free"/>
            <geom name="orange_boot" type="cylinder" pos="0 0 0.12" size="0.17 0.12" material="orange_mat" friction="0.9 0.05 0.05" density="650"/>
            <geom name="orange_leg" type="capsule" fromto="0 0 0.12 0 0 0.45" size="0.12" material="orange_cloth_mat" friction="0.9 0.05 0.05" density="520"/>
            <geom name="orange_torso" type="capsule" fromto="0 0 0.45 0 0 0.78" size="0.14" material="orange_cloth_mat" friction="0.9 0.05 0.05" density="480"/>
            <geom name="orange_shoulder" type="capsule" fromto="-0.24 0 0.72 0.24 0 0.72" size="0.07" material="orange_cloth_mat" friction="0.9 0.05 0.05" density="460"/>
            <geom name="orange_arm_left" type="capsule" fromto="-0.24 0 0.72 -0.34 0 0.4" size="0.06" material="orange_cloth_mat" friction="0.9 0.05 0.05" density="420"/>
            <geom name="orange_arm_right" type="capsule" fromto="0.24 0 0.72 0.34 0 0.4" size="0.06" material="orange_cloth_mat" friction="0.9 0.05 0.05" density="420"/>
            <geom name="orange_belt" type="cylinder" pos="0 0 0.48" size="0.17 0.04" material="orange_mat" friction="0.9 0.05 0.05" density="480"/>
            <geom name="orange_head" type="sphere" pos="0 0 0.92" size="0.12" material="skin_mat" friction="0.9 0.05 0.05" density="300"/>
            <geom name="orange_mask" type="cylinder" pos="0 -0.09 0.92" size="0.08 0.015" material="orange_mat" contype="0" conaffinity="0" density="150"/>
        </body>
    </worldbody>
</mujoco>
